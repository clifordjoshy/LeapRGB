<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hellotext"
        android:layout_width="147dp"
        android:layout_height="54dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:srcCompat="@drawable/hellotext" />

    <ImageView
        android:id="@+id/welcometext"
        android:layout_width="304dp"
        android:layout_height="41dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hellotext"
        android:visibility="gone"
        app:srcCompat="@drawable/welcometext" />

    <ImageView
        android:id="@+id/gounpressed"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:onClick="onGoButtonPressed"
        app:srcCompat="@drawable/gobuttonunpressed" />

    <ImageView
        android:id="@+id/gopressed"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:srcCompat="@drawable/gobuttonpressed" />

    <ImageView
        android:id="@+id/clicktext"
        android:layout_width="0dp"
        android:layout_height="91dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clickertext" />

    <ImageView
        android:id="@+id/pickyourpoisontext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="52dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pickyourpoisontext" />

    <ImageView
        android:id="@+id/snakebutton"
        android:layout_width="85dp"
        android:layout_height="17dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onOptionClicked"
        app:layout_constraintTop_toBottomOf="@+id/pickyourpoisontext"
        android:visibility="gone"
        app:srcCompat="@drawable/snaketext" />

    <ImageView
        android:id="@+id/pongbutton"
        android:layout_width="68dp"
        android:layout_height="17dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snakebutton"
        android:onClick="onOptionClicked"
        android:visibility="gone"
        app:srcCompat="@drawable/pomgtext" />

    <ImageView
        android:id="@+id/flooditbutton"
        android:layout_width="130dp"
        android:layout_height="17dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pongbutton"
        android:onClick="onOptionClicked"
        android:visibility="gone"
        app:srcCompat="@drawable/floodittext" />

    <ImageView
        android:id="@+id/tetrisbutton"
        android:layout_width="103dp"
        android:layout_height="17dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flooditbutton"
        android:visibility="gone"
        android:onClick="onOptionClicked"
        app:srcCompat="@drawable/tetristext" />

    <ImageView
        android:id="@+id/manualsetupbutton"
        android:layout_width="206dp"
        android:layout_height="17dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tetrisbutton"
        android:onClick="onOptionClicked"
        android:visibility="gone"
        app:srcCompat="@drawable/manualsetuptext" />

    <ImageView
        android:id="@+id/animationsbutton"
        android:layout_width="170dp"
        android:layout_height="17dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manualsetupbutton"
        android:onClick="onOptionClicked"
        android:visibility="gone"
        app:srcCompat="@drawable/animationtext" />

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickyourpoisontext"
        android:visibility="gone"
        app:srcCompat="@drawable/indicator" />

    <ImageView
        android:id="@+id/ohwelltext"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="69dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clicktext"
        android:alpha="0"
        app:srcCompat="@drawable/ohwelltext" />
</androidx.constraintlayout.widget.ConstraintLayout>